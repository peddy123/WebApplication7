@model Employee
@{
	ViewData["Title"] = "Home Page";
	var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h4>@Model.Name</h4>
			</div>

			<div class="card-body text-center">
				<img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
				<h4>@Model.Id</h4>
				<h4>@Model.Email</h4>
				<h4>@Model.Department</h4>
			</div>
			<div class="card-footer text-center">
				<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
				<a asp-controller="Home" asp-action="edit" asp-route-Id="@Model.Id"  class="btn btn-primary">Edit</a>
				<a asp-controller="Home" asp-action="Delete" asp-route-Id="@Model.Id"  class="btn btn-danger">Delete</a>
			</div>
		</div>
	</div>
</div>
